{% extends 'base.html.twig' %}

{% block title %}Statistique{% endblock %}

{% block body %}
<h1>Statistique</h1>
    {%if is_granted('ROLE_ADMIN')  %}
        <h1> Page reserv√© au moniteur</h1>
    {% endif %}

{%if is_granted('ROLE_MONITEUR')  %}
    <div>
        <canvas id="myChart" width="400" height="400"></canvas>
    </div>
    <br>
    <div>
        <canvas id="myChart2" width="400" height="400"></canvas>
    </div>

{% endif %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.anychart.com/releases/8.8.0/js/anychart-data-adapter.js"></script>
<script>

    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['jour', 'semaine','mois','annee','total'],
            datasets: [{
                data:[{{ nombreLeconDuJour|raw }},{{ nombreLeconDelaSemaine|raw}},{{ nombreLeconDuMois|raw}},{{ nombreLeconDelAnnee|raw}} ,{{ nombreLeconTotal|raw}}],
                label: "lecon en focntion de",
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 205, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(54, 162, 235, 0.2)'
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(54, 162, 235)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    const ctx2 = document.getElementById('myChart2');

    new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ['jour'],
            datasets: [{
                data:[{{ chiffreaffairejourmoto|raw }}],
                label: "chiffre affaire moto en focntion de",
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',

                ],
                borderColor: [
                    'rgb(255, 99, 132)',

                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });


</script>

{% endblock %}